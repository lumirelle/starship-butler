[
  /* --------------------------- Workbench Disables --------------------------- */
  // Quick Open
  {
    "key": "ctrl+p",
    "command": "-workbench.action.quickOpen"
  },
  // Editor
  {
    "key": "ctrl+m",
    "command": "-editor.action.toggleTabFocusMode" // This is for accessibility, which I don't need
  },
  // Terminal
  {
    "key": "ctrl+shift+5",
    "command": "-workbench.action.terminal.split",
    "when": "terminalFocus && terminalProcessSupported || terminalFocus && terminalWebExtensionContributedProfile"
  },
  {
    "key": "ctrl+shift+5",
    "command": "-workbench.action.terminal.splitActiveTab",
    "when": "terminalProcessSupported && terminalTabsFocus"
  },
  // Emojisense
  {
    "key": "ctrl+i",
    "command": "-emojisense.quickEmoji",
    "when": "editorTextFocus"
  },
  // Markdown
  {
    "key": "ctrl+m",
    "command": "-markdown.extension.editing.toggleMath",
    "when": "editorTextFocus && !editorReadonly && editorLangId =~ /^markdown$|^rmd$|^quarto$/"
  },

  /* --------------------------- Custom Keybindings --------------------------- */
  // Terminal
  {
    "key": "ctrl+alt+`",
    "command": "workbench.action.terminal.relaunch",
    "when": "terminalProcessSupported"
  },
  {
    "key": "alt+`",
    "command": "workbench.action.terminal.split",
    "when": "terminalFocus && terminalProcessSupported || terminalFocus && terminalWebExtensionContributedProfile"
  },
  {
    "key": "alt+`",
    "command": "workbench.action.terminal.splitActiveTab",
    "when": "terminalProcessSupported && terminalTabsFocus"
  },
  // GitLens
  {
    "key": "ctrl+;",
    "command": "workbench.view.extension.gitlensPanel"
  }
]
