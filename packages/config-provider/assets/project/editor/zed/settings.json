{
  // Editor Code Actions on
  "formatter": [
    { "code_action": "source.fixAll.eslint" }
  ],

  // Formatter & Linter
  "prettier": {
    "allowed": false
  },
  "lsp": {
    "eslint": {
      "settings": {
        "validate": [
          "javascript",
          "javascriptreact",
          "typescript",
          "typescriptreact",
          "vue",
          "html",
          "markdown",
          "json",
          "jsonc",
          "yaml",
          "toml",
          "xml",
          "css",
          "postcss",
          "scss",
          "sass",
          "less"
        ],
        "rulesCustomizations": [
          {
            "rule": "style/*",
            "severity": "off"
          },
          {
            "rule": "format/*",
            "severity": "off"
          },
          {
            "rule": "*-indent",
            "severity": "off"
          },
          {
            "rule": "*-spacing",
            "severity": "off"
          },
          {
            "rule": "*-spaces",
            "severity": "off"
          },
          {
            "rule": "*-order",
            "severity": "off"
          },
          {
            "rule": "*-dangle",
            "severity": "off"
          },
          {
            "rule": "*-newline",
            "severity": "off"
          },
          {
            "rule": "*quotes",
            "severity": "off"
          },
          {
            "rule": "*semi",
            "severity": "off"
          }
        ]
      }
    }
  }
}
