{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "moduleDetection": "force",
    "module": "preserve",
    "paths": {
      /* Add your custom paths resolution here, should align with your bundler's config */
    },
    "types": [
      /* Manually specify the types you want included here */
    ],
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "noUncheckedSideEffectImports": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  }
}
