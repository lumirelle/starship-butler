{
  "type": "module",
  "version": "1.0.3",
  "private": true,
  "scripts": {
    "prepare": "bun simple-git-hooks",
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "start": "bun run --cwd packages/core start",
    "docs": "bun run --cwd docs docs:dev",
    "docs:build": "bun run --cwd docs docs:build",
    "docs:preview": "bun run --cwd docs docs:preview",
    "play": "bun run --cwd playground play",
    "lint": "bun eslint --cache .",
    "typecheck": "bun tsc --noEmit",
    "usagecheck": "bun knip",
    "distcheck": "bun run --filter 'pkg-placeholder' distcheck",
    "check": "bun run lint && bun run typecheck && bun run usagecheck && bun run distcheck",
    "test": "bun test",
    "prerelease": "bun run build && bun run check && bun run test",
    "release": "bun bumpp --all --recursive --execute \"bun update --lockfile-only starship-butler\" # See https://github.com/oven-sh/bun/issues/18906 and https://github.com/oven-sh/bun/issues/20477"
  },
  "workspaces": {
    "packages": [
      "docs",
      "playground",
      "packages/*",
      "examples/*"
    ],
    "catalogs": {
      "dev": {
        "@antfu/eslint-config": "^7.0.0",
        "bumpp": "^10.4.0",
        "eslint": "^9.39.2",
        "eslint-plugin-format": "^1.3.1",
        "knip": "^5.81.0",
        "lint-staged": "^16.2.7",
        "simple-git-hooks": "git+https://github.com/toplenboren/simple-git-hooks.git#7625657",
        "taze": "^19.9.2",
        "typescript": "^5.9.3",
        "vitest-package-exports": "^1.1.2"
      },
      "build": {
        "@arethetypeswrong/core": "^0.18.2",
        "bunup": "^0.16.20",
        "publint": "^0.3.16"
      },
      "docs": {
        "@iconify-json/svg-spinners": "^1.2.4",
        "@shikijs/vitepress-twoslash": "^3.21.0",
        "@unocss/reset": "^66.5.12",
        "@vueuse/core": "^14.1.0",
        "floating-vue": "^5.2.2",
        "pinia": "^3.0.4",
        "unocss": "^66.5.12",
        "unplugin-vue-components": "^30.0.0",
        "vite-tsconfig-paths": "^6.0.4",
        "vitepress": "^1.6.4",
        "vitepress-plugin-group-icons": "^1.6.5",
        "vue": "^3.5.26"
      },
      "docs+testing": {
        "vite": "^7.3.1"
      },
      "prod": {
        "@antfu/utils": "^9.3.0",
        "@clack/prompts": "^0.11.0",
        "ansis": "^4.2.0",
        "c12": "^3.3.3",
        "cac": "^6.7.14",
        "consola": "^3.4.2",
        "defu": "^6.1.4",
        "pathe": "^2.0.3",
        "rc9": "^2.1.2",
        "tinyexec": "^1.0.2",
        "tinyglobby": "^0.2.15"
      },
      "types": {
        "@types/bun": "^1.3.6"
      }
    }
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:dev",
    "@arethetypeswrong/core": "catalog:build",
    "@types/bun": "catalog:types",
    "bumpp": "catalog:dev",
    "bunup": "catalog:build",
    "eslint": "catalog:dev",
    "eslint-plugin-format": "catalog:dev",
    "knip": "catalog:dev",
    "lint-staged": "catalog:dev",
    "publint": "catalog:build",
    "simple-git-hooks": "catalog:dev",
    "starship-butler": "workspace:*",
    "taze": "catalog:dev",
    "typescript": "catalog:dev",
    "vite": "catalog:docs+testing",
    "vitest-package-exports": "catalog:dev"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run lint-staged"
  },
  "lint-staged": {
    "*": [
      "bun run eslint --cache --fix"
    ]
  },
  "patchedDependencies": {
    "cac@6.7.14": "patches/cac@6.7.14.patch"
  }
}
