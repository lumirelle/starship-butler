{
  "type": "module",
  "version": "0.4.3",
  "private": true,
  "scripts": {
    "prepare": "bun run -b simple-git-hooks",
    "dev": "bun run -F '*' dev",
    "build": "bun run -F '*' build",
    "start": "bun run -F starship-butler start",
    "docs": "bun run -F docs docs:dev",
    "docs:build": "bun run -F docs docs:build",
    "docs:preview": "bun run -F docs docs:preview",
    "play": "bun run -F playground play",
    "lint": "eslint --cache . && bun run -b stylelint --cache **/*.{css,postcss,scss,sass,less,html,vue}",
    "typecheck": "bun run -b tsc --noEmit",
    "test": "bun test",
    "prerelease": "bun run test && bun run typecheck",
    "release": "bun run -b bumpp -r"
  },
  "workspaces": {
    "packages": [
      "docs",
      "playground",
      "packages/*",
      "examples/*"
    ],
    "catalogs": {
      "dev": {
        "@antfu/eslint-config": "^6.4.2",
        "@lumirelle/stylelint-config": "^4.1.5",
        "bumpp": "^10.3.2",
        "czg": "^1.12.0",
        "eslint": "^9.39.1",
        "eslint-plugin-format": "^1.1.0",
        "lint-staged": "^16.2.7",
        "simple-git-hooks": "git+https://github.com/toplenboren/simple-git-hooks.git#7625657",
        "stylelint": "^16.26.1",
        "taze": "^19.9.2",
        "tsdown": "^0.17.0",
        "typescript": "^5.9.3",
        "vite": "^7.2.6"
      },
      "docs": {
        "@iconify-json/svg-spinners": "^1.2.4",
        "@shikijs/vitepress-twoslash": "^3.19.0",
        "@unocss/reset": "^66.5.10",
        "@vueuse/core": "^14.1.0",
        "floating-vue": "^5.2.2",
        "pinia": "^3.0.4",
        "unocss": "^66.5.10",
        "unplugin-vue-components": "^30.0.0",
        "vite-tsconfig-paths": "^5.1.4",
        "vitepress": "^2.0.0-alpha.15",
        "vitepress-plugin-group-icons": "^1.6.5",
        "vue": "^3.5.25"
      },
      "inlined": {
        "@antfu/utils": "^9.3.0"
      },
      "prod": {
        "@clack/prompts": "^0.11.0",
        "ansis": "^4.2.0",
        "c12": "^3.3.2",
        "cac": "^6.7.14",
        "consola": "^3.4.2",
        "defu": "^6.1.4",
        "pathe": "^2.0.3",
        "rc9": "^2.1.2",
        "tinyglobby": "^0.2.15"
      },
      "types": {
        "@types/bun": "^1.3.3"
      }
    }
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:dev",
    "@lumirelle/stylelint-config": "catalog:dev",
    "@types/bun": "catalog:types",
    "bumpp": "catalog:dev",
    "czg": "catalog:dev",
    "eslint": "catalog:dev",
    "eslint-plugin-format": "catalog:dev",
    "lint-staged": "catalog:dev",
    "simple-git-hooks": "catalog:dev",
    "starship-butler": "workspace:*",
    "stylelint": "catalog:dev",
    "taze": "catalog:dev",
    "tsdown": "catalog:dev",
    "typescript": "catalog:dev",
    "vite": "catalog:dev"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run -b lint-staged"
  },
  "lint-staged": {
    "*": [
      "eslint --fix"
    ],
    "*.{css,postcss,scss,sass,less,html,vue}": [
      "stylelint --fix"
    ]
  }
}
