{
  "type": "module",
  "version": "0.1.2",
  "private": true,
  "packageManager": "pnpm@10.18.2",
  "scripts": {
    "build": "nr -r build",
    "dev": "nr -r --parallel dev",
    "lint": "eslint --cache .",
    "prepublishOnly": "nr typecheck && nr build",
    "docs": "nr -C docs docs:dev",
    "docs:build": "nr -C docs docs:build",
    "release": "bumpp -r && na -r publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks",
    "start": "cd ./packages/core && nr start"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:dev",
    "@antfu/ni": "catalog:dev",
    "@antfu/utils": "catalog:dev",
    "@lumirelle/stylelint-config": "catalog:dev",
    "@types/node": "catalog:dev",
    "bumpp": "catalog:dev",
    "czg": "catalog:dev",
    "eslint": "catalog:dev",
    "eslint-plugin-format": "catalog:dev",
    "lint-staged": "catalog:dev",
    "simple-git-hooks": "catalog:dev",
    "starship-butler": "workspace:*",
    "stylelint": "catalog:dev",
    "taze": "catalog:dev",
    "tsdown": "catalog:dev",
    "tsx": "catalog:dev",
    "typescript": "catalog:dev",
    "vite": "catalog:dev",
    "vitest": "catalog:dev"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
